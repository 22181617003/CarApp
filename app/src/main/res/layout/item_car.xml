<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView android:id="@+id/txtBrand" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/marka" android:textStyle="bold"/>
    <TextView android:id="@+id/txtModel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/model"/>
    <TextView android:id="@+id/txtYear" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/yil"/>
    <TextView android:id="@+id/txtPrice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fiyat"/>
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sil"
        android:layout_gravity="end"
        android:backgroundTint="@color/red"
        />
</LinearLayout>